SELECT * FROM HR_SALARYIMPORTDATAGD;
SELECT E.EMPNAME, H.*
  FROM HR_EMPLEVELGD H, MCEMPLOYEEINFOGS E
 WHERE H.EMPID = E.EMPID(+);
SELECT * FROM HR_SALARYLEVELGD;
SELECT * FROM HR_SALARY_CONFIGS;
SELECT * FROM HR_SALARYTOTALMAINGD;
SELECT *
  FROM MCEMPLOYEEINFOGS E
 WHERE E.EMPNAME IN ('蔡青青', '徐昕怡', '倪超');
SELECT * FROM HRMONTHLYRECGD H WHERE H.EMPID = '11130509100415928103';
/*
B、驾龄津贴（ ）
    驾驶员驾龄工资各阶段累加逐年递增表
年限  第1-10年（含）第11-15年（含）第16-20年（含）第21年（含）以上额度   
50元/年        100元/年        150元/年      200元/年
例：驾驶员甲在本公司营运客车岗位上达13年，其驾龄工资计算方法为：10年×50元/年+3年×100元/年=800元。*/

SELECT E.EMPID,
       E.EMPNAME,
       E.SERVICEAGE,
       CASE
         WHEN E.SERVICEAGE <= 10 THEN
          E.SERVICEAGE * 50
         WHEN E.SERVICEAGE > 10 AND E.SERVICEAGE <= 15 THEN
          500 + (E.SERVICEAGE - 10) * 100
         WHEN E.SERVICEAGE > 15 AND E.SERVICEAGE <= 20 THEN
          1000 + (E.SERVICEAGE - 15) * 150
         WHEN E.SERVICEAGE > 20 THEN
          1750 + (E.SERVICEAGE - 20) * 200
         ELSE
          0
       END SERVICEAGE
  FROM MCEMPLOYEEINFOGS E
 WHERE E.EMPID = '55150203163543809043';
SELECT * FROM EMPDRIVEINFO;
SELECT EXTRACT(YEAR FROM TRUNC(SYSDATE)) -
       EXTRACT(YEAR FROM TO_DATE('2016-04-30', 'yyyy-mm-dd'))
  FROM DUAL;
UPDATE MCEMPLOYEEINFOGS E
   SET E.SERVICEAGE = 25
 WHERE E.EMPID = '55150203163543809043';
